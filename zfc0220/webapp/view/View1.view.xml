<mvc:View controllerName="sync04.zfc0220.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page id="page" title="{i18n>title}">
        <content>
            <!-- Condition -->
            <Panel expandable="true" expanded="true">
                <Toolbar>
                    <content>
                        <Title text = "Condition" />
                        <ToolbarSpacer />
                        <Button icon="sap-icon://search" press="onSearch" />
                    </content>
                </Toolbar>
                <content>
                    <l:VerticalLayout>
                        <l:HorizontalLayout>
                            <Label text="Airline" />
                            <Input id="inpCarrid" value="AA" />
                        </l:HorizontalLayout>
                        <l:HorizontalLayout>
                            <Label text="Conn No" />
                            <Input id="inpConnid" value="17" />
                        </l:HorizontalLayout>
                    </l:VerticalLayout>
                </content>
            </Panel>

            <!-- Flight Form -->
            <f:SimpleForm>
                <f:title><core:Title text="Flight Info" /></f:title>
                <f:content>
                    <!-- Airline Container-->
                    <core:Title text="Airline Info" />
                    <Label text="Airline" />
                        <Input value="AA" />
                        <Text text="American Airline" />
                    <Label text="Currency" />
                        <Input value="USD" />
                    <core:Title text="Flight schedule" />
                    <Label text="Flight Number" />
                        <Input value="17" />
                    <Label text="City" />
                        <Input value="NEW YORK" />
                        <Text text="~" />
                        <Input value="SAN FRANCISCO" />
                    <Label text="Airport"/>
                        <Input value="JFK" />
                        <Text text="~" />
                        <Input value="SFO" />
                </f:content>
            </f:SimpleForm>
        </content>
    </Page>
</mvc:View>
