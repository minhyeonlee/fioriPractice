<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Panel expandable="true" expanded="true" headerText="Test">
        <Toolbar>
            <content>
                <Title text="Condition Info" />
                <ToolbarSpacer />
                <Button icon="sap-icon://search" press="onSearch" />
            </content>
        </Toolbar>
        <content>
            <l:VerticalLayout>
                <Title text="Condition"/>
                <l:HorizontalLayout>
                    <Label text="Airline" width="100px"/>
                    <Input id="inpCarrid" value="AA"  width="200px"/>
                </l:HorizontalLayout>
                <l:HorizontalLayout>
                    <Label text="Conn No"  width="100px"/>
                    <Input id="inpConnid" value="17"  width="200px"/>
                </l:HorizontalLayout>
            </l:VerticalLayout>
        </content>
    </Panel>

</core:FragmentDefinition>