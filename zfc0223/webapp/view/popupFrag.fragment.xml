<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>

    <Dialog id="diaInfo" title="Airport Info" contentWidth="700px" contentHeight="200px">
        <Panel expandable="false" expanded="true">
            <Toolbar>
                <content>
                    <Title text="Airport Detail Info" />
                    <ToolbarSpacer />
                    <Button press="onClose" icon="sap-icon://sys-cancel-2"/> 
                </content>
            </Toolbar>
            <content>

                <l:VerticalLayout>
                    <l:HorizontalLayout>
                        <Label text="Departure" width="100px"/>
                        <Input value="JFK" editable="false" width="400px" description="New York JF Kennedy, USA" />
                    </l:HorizontalLayout>
                    <l:HorizontalLayout>
                        <Label text="Arrival" width="100px"/>
                        <Input value="SFO" editable="false" width="400px" description="San Francisco Int Apt, USA" />
                    </l:HorizontalLayout>
                </l:VerticalLayout>

                </content>
        </Panel>
    </Dialog>

</core:FragmentDefinition>